<% if notice %>
<p id ="notice"> <%= notice %> </p>
<% end %>

<h1> Your Catalog </h1>
<% @products.each do |prod| %>
<div class="entry">
<%= image_tag(prod.image_url) %>
<h3> <%= prod.title %> </h3>
<%= sanitize(prod.description) %>
<div class="price_line">
<span class="price"> <%= number_to_currency prod.price %> </span>
</div>
</div>
<% end %>